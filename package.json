{
  "name": "issue-game",
  "version": "1.3.0",
  "description": "A GitHub Action that allows you to play games in Issues",
  "private": true,
  "scripts": {
    "dist": "dotenv -e .env -- node dist/index.js",
    "dist:local": "dotenv -e .env.local -- node dist/index.js",
    "bundle": "npm run lint:fix && npm run package",
    "commit": "npm run bundle && git add . && cz",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "postinstall": "simple-git-hooks",
    "changeset": "changeset",
    "lint:fix": "eslint --ext .ts src --fix"
  },
  "keywords": [
    "issue",
    "game",
    "tic-tac-toe"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "author": {
    "name": "xiaohuohumax",
    "url": "https://github.com/xiaohuohumax"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaohuohumax/issue-game.git"
  },
  "license": "MIT",
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vercel/ncc": "^0.38.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.1",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "simple-git-hooks": "^2.11.1"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/webhooks-definitions": "^3.67.3",
    "i18next": "^23.15.1"
  }
}
